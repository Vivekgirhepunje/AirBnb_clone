<%layout("/layouts/boilerplate") %>

<body>
   <h3>Edit a Listing</h3>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT">
        <input name="listing[title]>" value="<%=listing.title%>"  placeholder="enter title" type="text" />
        <br /><br />
        <textarea value="<%=listing.description%>" name="listing[description]>" placeholder="enter description"></textarea>
        <br /><br />
        <input value="<%=listing.image.url%>" name="listing[image][url]>" placeholder="enter image URL/Link" type="text" />
        <br /><br />
        <input value="<%=listing.price%>" name="listing[price]" placeholder="enter price" type="number" />
        <br /><br />
        <input value="<%=listing.country%>" name="listing[country]" placeholder="enter country" type="text" />
        <br /><br />
        <input value="<%=listing.location%>" name="listing[location]" placeholder="enter location" type="text" />
        <br /><br />
        <button>Save Edit</button>
        </form>
</body>
