<%layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          class="form-control"
          name="listing[title]>"
          value="<%=listing.title%>"
          placeholder="enter title"
          type="text"
        />
      </div>

      <div class="mb-3">
        <label for="description">Description</label>
        <textarea
          class="form-control"
          value="<%=listing.description%>"
          name="listing[description]>"
          placeholder="enter description"
        ></textarea>
      </div>

      <div class="mb-3">
        <label for="image-link">Image URL</label>
        <input
          value="<%=listing.image.url%>"
          name="listing[image][url]>"
          placeholder="enter image URL/Link"
          type="text"
          class="form-control"
        />
      </div>

      <!-- FIXED: price & country row with consistent spacing -->
      <div class="row align-items-end g-3 mb-3">
        <div class="col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            value="<%=listing.price%>"
            name="listing[price]"
            placeholder="enter price"
            type="number"
            class="form-control"
          />
        </div>
        <div class="col-md-8">
          <label for="country">Country</label>
          <input
            value="<%=listing.country%>"
            name="listing[country]"
            placeholder="enter country"
            type="text"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="location">Location</label>
        <input
          value="<%=listing.location%>"
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
        />
      </div>

      <button class="edit-btn btn btn-dark">Save Edit</button>
    </form>
  </div>
</div>
